<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Release date</th>
    <th>Character</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr id="game_#{game.id}">
    <td><%= game.name %></td>
    <td><%= game.release_date %></td>
    <td><%= game.character %></td>
    <td><%= link_to 'Show', game, id: "show_#{game.id}" %></td>
    <td><%= link_to 'Edit', edit_game_path(game), id: "edit_#{game.id}" %></td>
    <td><%= link_to 'Destroy', game, id: "delete_#{game.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />  

<%= link_to 'New Game', new_game_path %>
